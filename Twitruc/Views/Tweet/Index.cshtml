@model Twitruc.Models.TweetModel
@{
	ViewBag.Title = "TimeLine";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript" /></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/retweet.js")" type="text/javascript" ></script>

@Html.ValidationSummary(true, "Posting was unsuccessful. Please correct and try again.")
@using (Html.BeginForm()) {
	<div class="editor-field">
		@Html.TextAreaFor(m => m.Content)
		@Html.ValidationMessageFor(m => m.Content)
		<input type="submit" value="Tweet it!" />
	</div>
}
<div>
	@foreach (Twitruc.Models.TweetExtended t in ViewBag.Tweets) {<div>@Html.Partial("TweetDisplay", t)</div>}</div>
