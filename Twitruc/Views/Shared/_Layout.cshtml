<!DOCTYPE html>
@{
	String cont = @ViewContext.RouteData.Values["controller"] as string;
	String acti = @ViewContext.RouteData.Values["action"] as string;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" media="screen" />
	<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	<meta name="keywords" content="" />
	<meta name="description" content="" />
</head>
<body>
	<div id="header-wrapper">
		<div id="header">
			<div id="menu">
				<ul>
					<li @if (cont == "Home") {<text> class="current_page_item" </text>} ><a href="/">Home</a></li>
					<li @if (cont == "User") {<text> class="current_page_item" </text>} ><a href="@Url.Action("LogOff", "User")">
						LogOut</a></li>
					<li @if (cont == "Tweet") {<text> class="current_page_item" </text>} ><a href="@Url.Action("Index", "Tweet")">
						Tweets</a></li>
				</ul>
			</div>
			<div id="search">
				<form method="get" action="/Tweet/Search">
				<fieldset>
					<input type="text" name="search-text" id="search-text" size="15" />
					<input type="submit" id="search-submit" value="Search" />
				</fieldset>
				</form>
			</div>
		</div>
	</div>
	<div id="page">
		<div style="float: right;">
			@Html.Partial("_LogOnPartial")
		</div>
		<div id="logo">
			<h1>
				<a href="#">@ViewBag.Title</a></h1>
			<p>
				<em>{ by <a href="https://github.com/Christophe31/Twitruc">Twitruc</a> }</em></p>
		</div>
		<hr />
		<div id="content">
			@RenderBody()
		</div>
	</div>
	<div id="footer">
		<p>
			Web App powered by ASP.NET MVC.
			<script type="text/javascript" src="http://www.ohloh.net/p/489327/widgets/project_thin_badge.js"></script>
			| Design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.</p>
	</div>
</body>
</html>
